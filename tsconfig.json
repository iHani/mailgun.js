{
  "include": ["lib", "test", "tests/imports"],
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declarationDir": "./dist/",
    "declarationMap": true,
  },
  "typedocOptions": {
    "out": "docs",
    "entryPointStrategy": "expand",
    "entryPoints": ["./lib"],
    "exclude": ["test/**", "dist/**", "build/**", "docs/**", "examples/**"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "showConfig": true,
    "transpileOnly": true,
  }
}
